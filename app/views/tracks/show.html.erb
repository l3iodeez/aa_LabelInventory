
<h2><%= @track.title %> </h2>
<table>
  <tr>
    <td>Band:</td>
    <td><a href="<%= band_url(@track.band) %>"><%= @track.band.name %></a></td>
  </tr>
  <tr>
    <td>Album:</td>
    <td><a href=" <%= album_url(@track.album) %>" > <%= @track.album.title %></a></td>
  </tr>
  <tr>
    <td>Track type:</td>
    <td><%= @track.bonus %></td>
  </tr>
  <tr>
    <td>Lyrics:</td>
    <td><%= ugly_lyrics(@track.lyrics) %></td>
  </tr>
</table>
