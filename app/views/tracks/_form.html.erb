<form action="<%=form_action %>" method='POST'>
  <%= auth_token %>

  <input type="hidden"
         name="_method"
         value="<%= form_method %>">

  <label for="track_title">Track Title:</label>
  <input type="text" id="track_title"
         name="track[title]"
         value="<%= track.title %>">
  <br>
  <label for="track_album">Album:</label>
  <select id="track_album" name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%= album.id %>"<%= track.album_id == album.id ? "selected='true'" : nil %>"><%= album.title %></option>
    <% end %>
  </select>
  <br>
  <label for="regular">Regular</label>
  <input type="radio" id="regular"
         name="track[bonus]"
         value="regular" <%= track.is_regular? ? "checked='true'" : nil %>">

  <label for="bonus">Bonus</label>
  <input type="radio" id="bonus"
         name="track[bonus]"
         value="bonus" <%= track.is_bonus? ? "checked='true'" : nil  %>">
  <br>
  <label for="lyrics">Lryics</label>
  <textarea id="lyrics" name="track[lyrics]"><%= track.lyrics %></textarea>
  <br>
  <input type="submit" value="<%= submit_text %>">
</form>
